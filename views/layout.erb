<!DOCTYPE html>
<html>
  <head>
    <title>Blackjack</title>
    <link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="/application.css">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js" ></script>
    <script type="text/javascript" src="http://jqueryrotate.googlecode.com/svn/trunk/jQueryRotate.js"></script>
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    <% if session[:show_deal_top] %>
      <script>
          $( document ).ready(function() {
            $("#throw").css({left:-300, top:-400});
            $("#throw").rotate(-200);
            $("#throw").rotate({duration:900, animateTo:0,
              callback: function(){
                //alert('what?')
                //$( document ).forms["player_action"].submit();
                var form = document.createElement("form");
                form.setAttribute("method", "post");
                form.setAttribute("action", "/game/player_action");
                document.body.appendChild(form);
                form.submit();
              }
            })
            $('#throw').animate({ left: "0px",
              top:  "0px",
              }, 600);
          });
        </script>
      <% else %>
        <script>
          $( document ).ready(function() {
            $("#throw").css({left:-400, top:-700});
            $("#throw").rotate(-200);
            $("#throw").rotate({duration:900, animateTo:0})
            $('#throw').animate({ left: "0px",
              top:  "0px",
              }, 600);
          });
        </script>
      <% end %>

  </head>

  

  <body style="padding-top: 50px;">
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
            <ul class="nav">
              <li><a href="/">Home</a></li>
            </ul>
        </div>
      </div>
    </div>

  <div class="container">
    <%if @error %>
      <div class="alert alert-error"><%=@error%></div>
    <% end %>
      <%= yield %>
  </div>
  </body>
</html>
